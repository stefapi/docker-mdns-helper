# Docker mDNS Helper Configuration
# Copy this file to .env and modify as needed

# mDNS record Time-to-Live in seconds (default: 60)
MDNS_TTL=60

# Wait time between Docker scans in seconds (default: 5)
MDNS_WAIT=5

# Enable verbose logging (true/false, default: false)
MDNS_VERBOSE=false

# Force CNAME publishing without collision checks (true/false, default: false)
# WARNING: This is faster but potentially unsafe
MDNS_FORCE=false

# Reset publishing when CNAMEs are removed (true/false, default: true)
MDNS_RESET=true

# Disable automatic container detection (true/false, default: false)
# When true, only containers with docker-mdns.enable=true will be processed
MDNS_DISABLE=false

# Additional domains to publish (space-separated list)
# Example: MDNS_DOMAINS=example.local test.local
MDNS_DOMAINS=

# Log file path (optional, logs to stderr if not set)
# MDNS_LOG_FILE=/var/log/docker-mdns.log
